{
  "name": "soda-for-sparc",
  "productName": "SODA for SPARC",
  "version": "10.2.0",
  "description": "Keep Calm and Curate ",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build-win": "electron-builder build --win --publish never",
    "build-mac": "electron-builder build --mac --publish never",
    "build-linux": "electron-builder build --linux --publish never",
    "deploy-win": "electron-builder build --win --publish always",
    "deploy-mac": "electron-builder build --mac --publish always",
    "deploy-linux": "electron-builder build --linux --publish always",
    "python-onefile-build": "python -m PyInstaller --onefile --clean ./pyflask/app.py --distpath ./pyflaskdist",
    "python-onefile-build-validator": "python -m PyInstaller --onefile --clean ./pyflask/app.py --distpath ./pyflaskdist --additional-hooks-dir ./pyflask/validator/hooks",
    "python-onefile-build-validator-mac": "python -m PyInstaller --onefile --clean ./pyflask/app.py --distpath ./pyflaskdist --additional-hooks-dir ./pyflask/validator/hooks --add-data '../../opt/anaconda3/envs/env-electron-python/share:share' ",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore \"./**/*.+(html|css|js|md|yml)\" --write",
    "commit": "cz",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./**/*.{html|css|js|md|yml}": [
      "npm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fairdataihub/SODA-for-SPARC.git"
  },
  "build": {
    "appId": "com.fairdataihub.sodaforsparc",
    "generateUpdatesFilesForAllChannels": true,
    "afterSign": "./notarize.js",
    "files": [
      "**/*",
      "!pysoda/",
      "!build/",
      "!api.spec",
      "!Users/",
      "!pyflask/",
      "!docs/"
    ],
    "win": {
      "publish": [
        "github"
      ],
      "asar": false,
      "target": "nsis",
      "icon": "assets/app-icon/win/icon.ico"
    },
    "mac": {
      "publish": [
        "github"
      ],
      "asar": true,
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/app-icon/png/icon.png",
      "darkModeSupport": false,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.inherit.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "extraResources": [
        {
          "from": "./pyflaskdist/app"
        },
        {
          "from": "./file_templates",
          "to": "./file_templates"
        }
      ]
    },
    "linux": {
      "publish": [
        "github"
      ],
      "asar": true,
      "target": "AppImage",
      "icon": "assets/app-icon/png/icon.png",
      "extraResources": [
        {
          "from": "./pyflaskdist/app"
        },
        {
          "from": "./file_templates",
          "to": "./file_templates"
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/app-icon/win/icon.ico"
    }
  },
  "keywords": [],
  "author": "SODA Team",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "2.0.8",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@sweetalert2/theme-bulma": "^4.0.3",
    "@tarekraafat/autocomplete.js": "^10.2.6",
    "@toast-ui/editor": "^2.5.1",
    "@yaireo/dragsort": "^1.3.1",
    "@yaireo/tagify": "^4.16.4",
    "airtable": "^0.8.1",
    "amazon-cognito-identity-js": "^5.2.0",
    "animate.css": "^4.1.1",
    "axios": "^0.19.2",
    "bootbox": "^5.5.2",
    "bootstrap": "^4.0.0",
    "bootstrap-icons": "^1.5.0",
    "bootstrap-select": "^1.13.18",
    "check-disk-space": "^3.2.0",
    "convert-csv-to-json": "^1.3.0",
    "convert-excel-to-json": "^1.7.0",
    "cropperjs": "^1.5.12",
    "doi-regex": "^0.1.13",
    "dragselect": "2.0.2",
    "electron-context-menu": "^0.13.0",
    "electron-log": "^4.3.5",
    "electron-notarize": "^1.2.1",
    "electron-shortcut-normalizer": "^1.0.0",
    "electron-updater": "4.3.9",
    "excel4node": "^1.7.2",
    "exponential-backoff": "^3.1.0",
    "find-free-port": "^2.0.0",
    "fomantic-ui": "^2.8.8",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "html2canvas": "^1.0.0-rc.5",
    "image-data-uri": "^2.0.1",
    "ini": "^2.0.0",
    "intro.js": "^4.1.0",
    "jimp": "^0.16.1",
    "jquery": "^3.6.0",
    "jstree": "^3.3.11",
    "jsuites": "^4.9.33",
    "lottie-web": "^5.9.5",
    "mv": "^2.1.1",
    "node-localstorage": "^2.1.6",
    "notyf": "^3.9.0",
    "pdfkit": "^0.11.0",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "remove-markdown": "^0.3.0",
    "select2": "^4.1.0-rc.0",
    "spur-template": "^1.1.0",
    "sweetalert2": "^10.16.9",
    "tippy.js": "^6.3.1",
    "tui-date-picker": "^4.3.1",
    "universal-analytics": "^0.4.23",
    "uuid": "^8.3.1",
    "v8-compile-cache": "^2.3.0",
    "validator": "^13.7.0",
    "win-node-env": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@fairdataihub/config": "^2.2.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "19.0.0",
    "electron-builder": "^23.3.0",
    "electron-packager": "^14.0.6",
    "electron-rebuild": "^1.11.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "megasanjay-devmoji": "^1.1.0",
    "prettier": "^2.3.2"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
